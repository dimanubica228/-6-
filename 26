fun findAverage(numbers: IntArray): Double {
    if (numbers.isEmpty()) {
        return 0.0 
    }

    var sum = 0
    for (number in numbers) {
        sum += number
    }

    return sum.toDouble() / numbers.size
}

fun main() {
    val numbers = intArrayOf(1, 2, 3, 4, 5)
    val average = findAverage(numbers)
    println("Среднее арифметическое: $average")
}
